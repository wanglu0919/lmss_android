<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- 普通文本输入框样式 -->
    <style name="Nomail_TextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColorHint">#ffb2b2b2</item>
        <item name="android:background">@drawable/nomail_edit_input</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">62.0dip</item>
        <item name="android:minHeight">40.0dip</item>
    </style>

    <!-- 主tab切换  radioButton样式 -->

    <style name="Main_Tab_RadioButton_Style">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#A0D4FE</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/main_tab_radio_selector</item>
    </style>

    <!-- 信息左边信息名称样式 -->
    <style name="Item_Left_TextView_Style" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#171717</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10.0dip</item>
    </style>

    <style name="Item_Right_TextView_Style" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#3CA4E1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10.0dip</item>
    </style>

    <!-- 含有右箭头的图标 -->
    <style name="Item_Right_TextView_More_Style" parent="Item_Right_TextView_Style">
        <item name="android:drawableRight">@drawable/item_more_icon</item>
        <item name="android:drawablePadding">5dip</item>
    </style>
    <!-- 滑动View样式 -->

    <style name="Item_ScrollView_Sytle" parent="@android:style/Widget.ScrollView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/tab_content_bg</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingTop">10dip</item>
    </style>
    <!-- 更多箭头样式 -->
    <style name="Item_ImageMore_Sytle" parent="@android:style/Widget.ImageWell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/item_more_icon</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- 实线分割线样式 -->
    <style name="Item_Devide_Solid_Line_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/nomal_devider_color</item>
    </style>
    <!-- 虚线分割线样式 -->
       <style name="Item_Devide_Dashed_Line_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">2dip</item>
        <item name="android:background">@drawable/item_devide_dashe_line</item>
    </style>
    
       <!-- 自定义键盘 -->
       <style name="widget_currency_rate_input_btn">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/widget_currency_rate_input_btn_text</item>
        <item name="android:background">@drawable/widget_keypad_operation_digit</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">65dip</item>
        <item name="android:layout_height">47dip</item>
        <item name="android:layout_marginTop">2dip</item>
        <item name="android:layout_marginBottom">2dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
</resources>