<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_content_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/edit_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dip"
        android:background="@color/edit_conteng_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/test_btn_up"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/test_checked_selector"
                android:button="@null"
                android:gravity="center"
                android:text="上行"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/test_btn_down"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/test_checked_selector"
                android:button="@null"
                android:gravity="center"
                android:text="下行"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/test_btn_stop"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/test_checked_selector"
                android:button="@null"
                android:gravity="center"
                android:text="停止"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="返回数据" />

        <EditText
            android:id="@+id/test_et_one"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_margin="10dip"
            android:background="@drawable/g_round_box_bg"
            android:inputType="@null"
             />

        <EditText
            android:id="@+id/test_et_two"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_margin="10dip"
            android:background="@drawable/g_round_box_bg" 
            android:inputType="@null"
            />

        <EditText
            android:id="@+id/test_et_three"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_margin="10dip"
            android:background="@drawable/g_round_box_bg"
            android:inputType="@null"
             />

        <EditText
            android:id="@+id/test_et_four"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_margin="10dip"
            android:background="@drawable/g_round_box_bg" 
            
            android:inputType="@null"/>
    </LinearLayout>

</LinearLayout>