<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@drawable/title_boobar_bg"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/head_btn_back"
        android:layout_width="75dip"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/title_back_selector"
        android:text="@string/head_btn_back"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/head_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ProgressBar
        android:layout_marginLeft="2dip"
        android:id="@+id/pb_head"
        android:visibility="gone"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/head_tv_title" />

    <TextView
        android:id="@+id/pb_text"
        android:textSize="12sp"
        android:visibility="gone"
        android:text="连接中..."
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/pb_head" />

    <Button
        android:id="@+id/head_btn_save"
        android:layout_width="75dip"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/title_save_selector"
        android:text="@string/head_btn_save"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <Button
        android:id="@+id/head_btn_command_call"
        android:layout_width="75dip"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/title_call_command_selector"
        android:textColor="@android:color/white"
        android:visibility="gone" />

</RelativeLayout>