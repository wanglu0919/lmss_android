        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="25dip"
        android:background="@drawable/g_round_box_bg"
        android:clickable="true" >

        <RelativeLayout
            android:id="@+id/well_auto_study_rl_param"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/setting_up_selector"
            android:clickable="true" >

            <TextView
                style="@style/Item_Left_TextView_Style"
                android:text="@string/setting_auto_study_params"
                android:textColor="@color/tv_nomal_color"
                android:textSize="12sp" />

            <ImageView style="@style/Item_ImageMore_Sytle" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/auto_study_btn_well_start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
