    <View
        style="@style/Item_Devide_Dashed_Line_Style"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:background="@drawable/setting_up_selector"
        android:clickable="true" >

        <TextView
            style="@style/Item_Left_TextView_Style"
            android:text="@string/setting_auto_study_well_step_3"
            android:textColor="@color/tv_nomal_color"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        style="@style/Item_Devide_Dashed_Line_Style"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:background="@drawable/setting_up_selector"
        android:clickable="true" >

        <TextView
            style="@style/Item_Left_TextView_Style"
